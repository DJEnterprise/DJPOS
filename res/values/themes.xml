<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
          parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
      <item name="android:activatedBackgroundIndicator">@drawable/drawer_selectbackground</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@drawable/actionbar</item>
        <item name="android:titleTextStyle">@style/myTitleText</item>
    </style>
    
      <style name="myTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
     <item name="android:textColor">@android:color/white</item>

    </style>
    
</resources>
